<article id="search">
    <form>
        <div class="form-group">
            <label for="formGroup" style="margin-botton: 10px;"><h3>Busca entre cientos de Recetas Magistrales y Sintesis Quimicas</h3>            </label>
            <input type="text" class="form-control" id="formGroup" placeholder="Buscador" style="margin-bottom: 10px;">
            <button type="button" class="btn btn-info" id="insColor" style="margin-top: 15px;" onclick="Search()">Buscar</button>
        </div>
    </form>

    {{#if listaRecetas.length }}
    {{#each listaRecetas}}
        <div class="jumbotron" id="Recetario">
            <h2>Nombre: {{this.Nombre}}</h2>
            <ul>
                <li>Reactivos: {{this.Reactivos}}</li>
                <li>Material: {{this.Material}}</li>
                <li>Procedimiento:</li> 
                    <p>{{this.Procedimiento}} </p>
                <li>Usos: {{this.Usos}} </li>
            </ul>
        </div>
    {{/each}}
    
    {{else}}

        <h2>No se encuentra la receta buscada</h2>
    
    {{/if}}

    <script>
        function Search() {
            let url = "/recipes?"
            let recetas = document.getElementById("recetas").value;

            if (recetas){
                url += "recetas" + recetas;
            }
            location = url;
        }
        
    </script>

</article>